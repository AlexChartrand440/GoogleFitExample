<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/lightGray"
    android:padding="30dp">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/semiBlack"
        android:textSize="24sp"
        android:text="Add Activity"
        android:textStyle="bold" />

    <Spinner
        android:paddingTop="20dp"
        android:id="@+id/activitySpinner"
        android:layout_below="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:entries="@array/activity_types"
        android:prompt="@string/activity_prompt"
        style="@style/Theme.AppCompat.Light"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editInputLayout"
        android:paddingTop="20dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/activitySpinner">

        <EditText
            android:id="@+id/editTextDialogUserInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0">

            <requestFocus />

        </EditText>

    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/labelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/editTextDialogUserInput"
        android:text="min"
        android:layout_marginLeft="-25dp"
        android:paddingBottom="12dp"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/editInputLayout"
        android:layout_toRightOf="@+id/editInputLayout"
        android:textColor="@color/semiBlack"
        />

</RelativeLayout>